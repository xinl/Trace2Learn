<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/view_slot"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <edu.upenn.cis350.Trace2Learn.SquareLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/character_view_slot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tag_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/character_view_slot"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/attribute_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/character_view_slot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/trace_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTraceButtonClick"
            android:text="@string/practice" />

        <Button
            android:id="@+id/animate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAnimateButtonClick"
            android:text="@string/animate" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClearButtonClick"
            android:text="Clear" />

    </LinearLayout>

</LinearLayout>